<div class="container">
  <section id="page-name">
   	<img src="../../assets/img/burgerPic.jpg" width="400px" id="cute_burger"></img>
    <h1>Eat-Da-Burger</h1>
  </section>

  <section class="row">
    <div class="col-md-7 col-left">
      <table>
        <h3>Uneaten</h3>
        {{#each burger}}
        {{#unless devoured}}
          <div>
            {{burger_name}}
        <button class="changeDevour" data-id="{{id}}" >devour it</button>

          </div>
        {{/unless}}
        {{/each}}
      </table>
    </div>
    <div class="col-md-5 col-right">
      <h3>Devoured</h3>
      {{#each burger}}
      {{#if devoured}}
      <div>
        {{burger_name}}
        <button class="makeMore" data-id="{{id}}">make another</button>
      </div>
      {{/if}}
      {{/each}}
    </div>
  </section>

  <form class="create-form">
    <div class="form-group">
      <label for="name"></label>
      <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What do you want to eat?"></textarea>
    </div>
    <button type="submit" id="addBurgerButton">Add Burger</button>
  </form>

    <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="devoured" value="1" checked> Uneaten<br>
    <input type="radio" name="devoured" value="0"> Devoured
  </div>
</div>